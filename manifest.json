{
  "manifest_version": 3,
  "name": "Takeout Downloader",
  "version": "1.0.0",
  "description": "Automate Google Takeout download links",
  "permissions": [
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "https://takeout.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://takeout.google.com/manage/archive*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
